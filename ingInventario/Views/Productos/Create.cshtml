
@{
    ViewBag.Title = "Agregar producto";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <h2>Crear Producto</h2>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h3>Ingrese los datos del proveedor a crear</h3>
            </div>
            <div class="ibox-content">
                <form method="post" action="@Url.Action("Create","Productos")">
                    <div class="form-group row">
                        <label class="col-2 text-right">Marca:</label>
                        <div class="col-10">
                            <!--Helper de razor para select -->
                            @Html.DropDownList("marca", null, "Seleccione Marca", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Categoría:</label>
                        <div class="col-10">
                            <!--Helper de razor para select -->
                            @Html.DropDownList("categoria", null, "Seleccione Categoría", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Proveedor:</label>
                        <div class="col-10">
                            <!--Helper de razor para select -->
                            @Html.DropDownList("proveedor", null, "Seleccione Proveedor", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Nombre:</label>
                        <div class="col-10">
                            <input type="text" name="nombre" id="nombre" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Código:</label>
                        <div class="col-10">
                            <input type="text" name="codigo" id="codigo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Cantidad:</label>
                        <div class="col-10">
                            <input type="number" name="cantidad" id="cantidad" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Precio:</label>
                        <div class="col-10">
                            <input type="text" name="precio" id="precio" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Comentario:</label>
                        <div class="col-10">
                            <textarea name="comentario" id="comentario" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Guardar" id="guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- sweetalert permite mostrar alertas más glamorosas -->
<link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>
<script>
    $('#guardar').click(function (e) {
        let error = '';
        if (!$('#marca').val())
            error = 'Debe seleccionar marca \n';
        if (!$('#categoria').val())
            error += 'Debe seleccionar categoría \n';
        if (!$('#proveedor').val())
            error += 'Debe seleccionar proveedor \n';
        if ($('#nombre').val().trim() === '')
            error += 'Debe ingresar nombre \n';
        if ($('#codigo').val().trim() === '')
            error += 'Debe ingresar código \n';
        if (error != '') {
            e.preventDefault();
            swal('Error validación', error, 'error');
        }
        else
        {
            //mostrar que se hizo en el layout
            //se enviarán los datos al controlador a través de ajax

        }
    });
</script>