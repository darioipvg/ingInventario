@model ingInventario.Models.Marca
<div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Eliminar Marca</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form action="/Marcas/Delete" method="post">
            <!-- Modal body -->
            <div class="modal-body">
                <input type="hidden" name="id_marca" value="@Model.id_marca" />
               <h2>¿Desea eliminar la marca @Model.nombre ?</h2>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <input type="submit" value="Eliminar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
